<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:text="ПАРАМЕТРЫ СЕТИ"
                android:id="@+id/textView2"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:textColor="@color/acsent_color" />
        <View
                android:layout_width="fill_parent"
                android:background="@color/acsent_color"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />
        <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/editServerName"
                    android:hint="Название сервера"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColorHint="@color/primary_text_holo_dark"
                    android:nextFocusDown="@+id/editServerAdress"
                    android:maxLength="80"/>
                <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:hint="Адрес"
                        android:inputType="textPersonName"
                        android:textSize="18sp"
                        android:maxLength="80"
                        android:textColorHint="@color/primary_text_holo_dark"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/editServerAdress"
                        android:nextFocusDown="@+id/editUserName"/>
            <FrameLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Использовать"
                        android:gravity="left"
                        android:id="@+id/textView3"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="26dp"
                        android:textSize="18sp"
                        android:textColor="@color/primary_text_holo_dark"
                        android:layout_marginTop="4dp" />
                <Switch
                        android:id="@+id/toggleIsActive"
                        android:textOn="ДА"
                        android:textOff="НЕТ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:checked="false"
                        android:layout_marginRight="16dp"
                        android:thumb="@drawable/switch_inner_holo_light"
                        android:track="@drawable/switch_track_holo_light"
                        android:layout_marginLeft="0.0dp"
                        android:layout_marginTop="4dp"
                        android:thumbTextPadding="5dp"
                        android:switchTextAppearance="@style/SwitchTextAppearance" />
            </FrameLayout>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:text="ПАРАМЕТРЫ АВТОРИЗАЦИИ"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="40dp"
                android:textSize="18sp"
                android:textColor="@color/acsent_color" />
        <View
                android:layout_width="fill_parent"
                android:background="@color/acsent_color"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />
        <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editUserName"
                    android:singleLine="true"
                    android:hint="Логин"
                    android:inputType="textPersonName"
                    android:textSize="18sp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColorHint="@color/primary_text_holo_dark"
                    android:maxLength="64"/>
            <EditText
                    android:inputType="textPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Пароль"
                    android:id="@+id/editPassword"
                    android:textSize="18sp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="2dp"
                    android:textColorHint="@color/primary_text_holo_dark"
                    android:maxLength="64"/>
            <CheckBox
                    android:text="Показать пароль"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox1"
                    android:checked="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/primary_text_holo_dark" />
        </LinearLayout>
        <!-- Property Change Conflict | id:@+id/editServerName | textColor=@color/acsent_color -->
    </LinearLayout>
</ScrollView>