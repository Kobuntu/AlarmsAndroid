<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <TextView
            android:id="@+id/tvSimpleServerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/primary_text_holo_dark"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />
    <TextView
            android:id="@+id/tvSimpleServerEndpointAddress"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="xx.xx.xx.xx"
            android:textSize="18sp"
        android:layout_below="@id/tvSimpleServerName"
        android:layout_alignLeft="@id/tvSimpleServerName"
        android:layout_toRightOf="@id/tvSimpleServerName"
        android:layout_marginTop="4.7dp"
        android:textColor="@android:color/secondary_text_dark"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tbSimpleServerIsActive"
            android:textOn="ВКЛ"
            android:focusable="false"
            android:checked="false"
            android:textOff="ВЫКЛ"
            android:layout_toRightOf="@id/tvSimpleServerEndpointAddress"
            android:layout_alignTop="@id/tvSimpleServerEndpointAddress"
            android:thumb="@drawable/switch_inner_holo_light"
            android:track="@drawable/switch_track_holo_light"
            android:thumbTextPadding="5dp"
            android:switchTextAppearance="@style/SwitchTextAppearance"
            android:layout_marginLeft="15.3dp" />
</RelativeLayout>